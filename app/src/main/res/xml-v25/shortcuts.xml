<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="settings"
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_icon"
        android:roundIcon="@mipmap/ic_shortcut_icon_round"
        android:shortcutShortLabel="@string/settings_camera"
        android:shortcutLongLabel="@string/settings_msg"
        android:shortcutDisabledMessage="@string/settings_disable">

        <intent
            android:action="com.xuqiqiang.camera2.app.setting"
            android:targetPackage="com.xuqiqiang.camera2.app"
            android:targetClass="com.xuqiqiang.camera2.app.SettingsActivity"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
</shortcuts>